<!DOCTYPE html>
<html>
<head>
  <title>Manage Teachers</title>
  <link rel="stylesheet" href="/css/style2.css" />

  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background: #f4f6f7;
    }

    h1 {
      text-align: center;
      color: #2b7a0b;
      margin-top: 20px;
    }

    .table-container {
      width: 95%;
      margin: 20px auto;
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 16px;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 12px;
      text-align: center;
    }

    th {
      background-color: #4fcd3c;
      color: white;
    }

    .status-pending {
      color: orange;
      font-weight: bold;
    }

    .status-approved {
      color: green;
      font-weight: bold;
    }

    .status-rejected {
      color: red;
      font-weight: bold;
    }

    .status-blocked {
      color: grey;
      font-weight: bold;
    }

    button {
      padding: 5px 10px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      color: white;
    }

    .approve-btn { background-color: green; }
    .reject-btn { background-color: red; }
    .block-btn  { background-color: grey; }
  </style>
</head>

<body>

  <h1>Manage Teachers</h1>

  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Unique ID</th>
          <th>Email</th>
          <th>College</th>
          <th>Phone</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        
        <% teachers.forEach(teacher => { %>
          <tr>
            <td><%= teacher.name %></td>
            <td><%= teacher.uniqueId %></td>
            <td><%= teacher.email %></td>
            <td><%= teacher.institute %></td>
            <td><%= teacher.phone %></td>

            <td>
              <% if (teacher.approval === "pending") { %>
                <span class="status-pending">Pending</span>
              <% } else if (teacher.approval === "approved") { %>
                <span class="status-approved">Approved</span>
              <% } else if (teacher.approval === "rejected") { %>
                <span class="status-rejected">Rejected</span>
              <% } else if (teacher.approval === "blocked") { %>
                <span class="status-blocked">Blocked</span>
              <% } %>
            </td>

            <td>
              <form action="/student/teacher/approve/<%= teacher._id %>" method="POST" style="display:inline;">
                <button class="approve-btn">Approve</button>
              </form>

              <form action="/student/teacher/reject/<%= teacher._id %>" method="POST" style="display:inline;">
                <button class="reject-btn">Reject</button>
              </form>

              <form action="/student/teacher/block/<%= teacher._id %>" method="POST" style="display:inline;">
                <button class="block-btn">Block</button>
              </form>
            </td>
          </tr>
        <% }) %>

      </tbody>

    </table>
  </div>

</body>
</html>
