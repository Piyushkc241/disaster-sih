<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Login • Disaster Learning Hub</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Global styles (optional) -->
  <link rel="stylesheet" href="/css/style2.css" />
  <!-- Font Awesome -->
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 1.5rem;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background: radial-gradient(circle at top left, #bbf7d0 0, #ffffff 50%, #e0f2fe 100%);
    }

    .auth-wrapper {
      background: #ffffff;
      width: 100%;
      max-width: 460px;
      padding: 2.1rem 2rem 1.9rem;
      border-radius: 1.25rem;
      box-shadow: 0 14px 35px rgba(15, 23, 42, 0.16);
      border: 1px solid rgba(148, 163, 184, 0.3);
    }

    .auth-header {
      text-align: center;
      margin-bottom: 1.4rem;
    }

    .auth-icon {
      width: 52px;
      height: 52px;
      border-radius: 999px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 0.7rem;
      background: #ecfdf3;
      color: #15803d;
      font-size: 1.3rem;
    }

    .auth-title {
      font-size: 1.7rem;
      font-weight: 750;
      color: #0f172a;
      margin: 0 0 0.2rem;
    }

    .auth-subtitle {
      font-size: 0.9rem;
      color: #6b7280;
      margin: 0;
    }

    .auth-form {
      margin-top: 0.6rem;
    }

    .form-group {
      margin-bottom: 1rem;
      font-size: 0.9rem;
    }

    .form-group label {
      display: block;
      margin-bottom: 0.28rem;
      font-weight: 600;
      color: #111827;
    }

    .auth-form input,
    .auth-form select {
      width: 100%;
      padding: 0.62rem 0.75rem;
      border-radius: 0.6rem;
      border: 1px solid #cbd5e1;
      outline: none;
      font-size: 0.92rem;
      background: #f9fafb;
      transition: border-color 0.18s ease, box-shadow 0.18s ease, background 0.18s ease;
    }

    .auth-form input:focus,
    .auth-form select:focus {
      border-color: #0f9d58;
      background: #ffffff;
      box-shadow: 0 0 0 1px rgba(15, 157, 88, 0.2);
    }

    .login-btn {
      width: 100%;
      padding: 0.8rem;
      margin-top: 0.3rem;
      border-radius: 0.9rem;
      border: none;
      background: #0f9d58;
      color: #ffffff;
      font-size: 0.98rem;
      font-weight: 600;
      cursor: pointer;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.45rem;
      box-shadow: 0 10px 20px rgba(15, 157, 88, 0.35);
      transition: transform 0.12s ease, box-shadow 0.12s ease, background 0.12s ease;
    }

    .login-btn:hover {
      transform: translateY(-1px);
      background: #0b8a49;
      box-shadow: 0 12px 26px rgba(15, 157, 88, 0.4);
    }

    .auth-status {
      margin-top: 0.55rem;
      font-size: 0.85rem;
      font-weight: 600;
      min-height: 1.1em;
    }

    .auth-links {
      margin-top: 0.85rem;
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 0.4rem;
      font-size: 0.84rem;
    }

    .auth-links a {
      color: #0f9d58;
      text-decoration: none;
      font-weight: 600;
    }

    .auth-links a:hover {
      text-decoration: underline;
    }

    @media (max-width: 520px) {
      .auth-wrapper {
        padding: 1.7rem 1.4rem 1.6rem;
        border-radius: 1rem;
      }

      .auth-title {
        font-size: 1.55rem;
      }

      .auth-links {
        flex-direction: column;
        align-items: flex-start;
      }
    }
  </style>
</head>

<body>

  <div class="auth-wrapper">
    <div class="auth-header">
      <div class="auth-icon">
        <i class="fa-solid fa-user-shield"></i>
      </div>
      <h1 class="auth-title">Admin Login</h1>
      <p class="auth-subtitle">
        Sign in to manage teachers, students and disaster preparedness
        activities for your institution.
      </p>
    </div>

    <form id="adminLoginForm" class="auth-form">
      <div class="form-group">
        <label for="adminEmail">Email Address</label>
        <input
          type="email"
          id="adminEmail"
          placeholder="admin@college.edu"
          required
        />
      </div>

      <div class="form-group">
        <label for="adminPassword">Password</label>
        <input
          type="password"
          id="adminPassword"
          placeholder="Enter your password"
          required
        />
      </div>

      <div class="form-group">
        <label for="adminCollege">College / Institution</label>
        <select id="adminCollege" required>
          <option value="">Select your college</option>
          <option value="Accurate Institute of Management and Technology">Accurate Institute of Management and Technology</option>
          <option value="AKM Institute Of Technology & Management">AKM Institute Of Technology & Management</option>
          <option value="Bennett University">Bennett University</option>
          <option value="Delhi Technical Campus">Delhi Technical Campus</option>
          <option value="Dronacharya Group of Institutions">Dronacharya Group of Institutions</option>
          <option value="Galgotias College of Engineering and Technology">Galgotias College of Engineering and Technology</option>
          <option value="Galgotias University">Galgotias University</option>
          <option value="Gautam Buddha University">Gautam Buddha University</option>
          <option value="GL Bajaj Institute of Technology and Management">GL Bajaj Institute of Technology and Management</option>
          <option value="Greater Noida Institute of Technology (GNIOT)">Greater Noida Institute of Technology (GNIOT)</option>
          <option value="IEC College of Engineering & Technology">IEC College of Engineering & Technology</option>
          <option value="IILM University Greater Noida">IILM University Greater Noida</option>
          <option value="ITS Engineering College">ITS Engineering College</option>
          <option value="Lloyd Institute of Engineering and Technology">Lloyd Institute of Engineering and Technology</option>
          <option value="Noida Institute of Engineering and Technology (NIET)">Noida Institute of Engineering and Technology (NIET)</option>
          <option value="Sharda University">Sharda University</option>
          <option value="Shiv Nadar University">Shiv Nadar University</option>
          <option value="Vishveshwarya Group of Institutions">Vishveshwarya Group of Institutions</option>
          <option value="Other">Other / Not listed</option>
        </select>
      </div>

      <form action="/adminLogin">

        <button type="submit" class="login-btn" >
          <i class="fa-solid fa-right-to-bracket"></i>
          Login as Admin
        </button>
      </form>

      <p id="adminStatus" class="auth-status"></p>

      <div class="auth-links">
        <a href="#" id="forgotPassword">Forgot password?</a>
        <a href="/chooselogin">← Back to login options</a>
      </div>
    </form>
  </div>

  <script>
    const adminForm = document.getElementById("adminLoginForm");
    const adminStatus = document.getElementById("adminStatus");
    const forgotPassword = document.getElementById("forgotPassword");

    adminForm.addEventListener("submit", function (e) {
      e.preventDefault();

      const email = document.getElementById("adminEmail").value.trim();
      const password = document.getElementById("adminPassword").value.trim();
      const college = document.getElementById("adminCollege").value;

      if (!email || !password || !college) {
        adminStatus.textContent = "Please fill all fields to continue.";
        adminStatus.style.color = "#b91c1c";
        return;
      }

      // Demo credentials – replace with real auth later
      if (email === "admin@portal.com" && password === "admin123") {
        adminStatus.textContent = "Login successful! Redirecting to admin panel...";
        adminStatus.style.color = "#16a34a";

        setTimeout(() => {
          window.location.href = "/admindashboard"; // admin dashboard
        }, 1200);
      } else {
        adminStatus.textContent = "Invalid admin credentials. Please try again.";
        adminStatus.style.color = "#b91c1c";
      }
    });

    forgotPassword.addEventListener("click", function (e) {
      e.preventDefault();
      alert("A password reset link will be sent to your registered admin email. (Demo behaviour)");
    });
  </script>
</body>
</html>
