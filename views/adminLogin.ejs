<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Admin Login • Disaster Learning Hub</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Same global stylesheet as student & teacher -->
  <link rel="stylesheet" href="/css/style2.css" />
  <!-- Font Awesome -->
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body class="auth-page">

  <!-- MAIN LOGIN CARD -->
  <div class="auth-main">
    <div class="auth-tag">
      <i class="fa-solid fa-user-shield"></i>
      Admin Access
    </div>

    <h1 class="auth-title">Admin Login</h1>
    <p class="auth-subtitle">
      Sign in to manage teachers, students, and disaster preparedness activities.
    </p>

    <form id="adminLoginForm" class="auth-form">
      <div class="form-group">
        <label for="adminEmail">Admin Email</label>
        <input
          type="email"
          id="adminEmail"
          placeholder="admin@portal.com"
          required
        />
      </div>

      <div class="form-group">
        <label for="adminPassword">Password</label>
        <input
          type="password"
          id="adminPassword"
          placeholder="Enter your password"
          required
        />
      </div>

      <button type="submit" class="btn btn-primary" style="margin-top: 0.9rem;">
        <i class="fa-solid fa-right-to-bracket"></i>
        Log in as Admin
      </button>

      <p class="auth-status" id="adminStatus"></p>

      <p style="margin-top: 0.8rem; font-size: 0.85rem;">
        <a href="/chooselogin" class="auth-link">← Back to login options</a>
      </p>
      <p style="margin-top: 0.2rem; font-size: 0.85rem;">
        <a href="/" class="auth-link">← Back to main portal</a>
      </p>
    </form>
  </div>

  <script>
    const adminForm = document.getElementById("adminLoginForm");
    const adminStatus = document.getElementById("adminStatus");

    if (adminForm) {
      adminForm.addEventListener("submit", (e) => {
        e.preventDefault();

        const email = document.getElementById("adminEmail").value.trim();
        const password = document.getElementById("adminPassword").value.trim();

        if (!email || !password) {
          adminStatus.textContent = "Please enter both email and password.";
          adminStatus.className = "auth-status error";
          return;
        }

        adminStatus.textContent = "Verifying credentials...";
        adminStatus.className = "auth-status";

        // Demo credentials – change to real auth later
        if (email === "admin@portal.com" && password === "admin123") {
          adminStatus.textContent = "Login successful. Redirecting to admin dashboard...";
          adminStatus.className = "auth-status success";

          setTimeout(() => {
            // admin dashboard in same folder
            window.location.href = "/admindashboard";
          }, 900);
        } else {
          adminStatus.textContent = "Invalid admin credentials. Please try again.";
          adminStatus.className = "auth-status error";
        }
      });
    }
  </script>

</body>
</html>
