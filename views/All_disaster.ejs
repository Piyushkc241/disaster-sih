  <style>
    /* Alert Tab Styling */
    .alert-container {
      position: sticky;
      top: 0;
      z-index: 100;
      background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
      padding: 16px 20px;
      margin-bottom: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 15px;
      animation: slideDown 0.4s ease-out;
    }

    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .alert-content {
      display: flex;
      align-items: center;
      gap: 12px;
      flex: 1;
      min-width: 250px;
    }

    .alert-icon {
      width: 28px;
      height: 28px;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 16px;
      flex-shrink: 0;
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.1);
      }
    }

    .alert-text {
      color: white;
      font-weight: 500;
      font-size: 14px;
      line-height: 1.5;
    }

    .alert-text strong {
      font-size: 15px;
      display: block;
      margin-bottom: 2px;
    }

    .alert-close {
      background: rgba(255, 255, 255, 0.2);
      border: none;
      color: white;
      cursor: pointer;
      width: 32px;
      height: 32px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18px;
      transition: all 0.3s ease;
      flex-shrink: 0;
    }

    .alert-close:hover {
      background: rgba(255, 255, 255, 0.3);
      transform: rotate(90deg);
    }

    /* Alert Type Variants */
    .alert-danger {
      background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
    }

    .alert-warning {
      background: linear-gradient(135deg, #ffa500 0%, #ff8c42 100%);
    }

    .alert-success {
      background: linear-gradient(135deg, #4caf50 0%, #45a049 100%);
    }

    .alert-info {
      background: linear-gradient(135deg, #2196f3 0%, #1e88e5 100%);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .alert-container {
        padding: 12px 15px;
        flex-direction: column;
        align-items: flex-start;
      }

      .alert-content {
        width: 100%;
      }

      .alert-close {
        align-self: flex-end;
        margin-top: -30px;
      }

      .alert-text {
        font-size: 13px;
      }
    }
  </style>
</head>

