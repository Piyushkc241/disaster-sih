<% if (typeof index !== "undefined" && index != 0) { %>
<script>
  (function() {
    const msg = "<%- msg %>";
    const alertToast = document.getElementById("alertToast");
    if (msg && alertToast) {
      alertToast.textContent = msg + ". Be safe!";
      alertToast.classList.add("show");
      setTimeout(() => alertToast.classList.remove("show"), 5000);
    }
  })();
</script>
<% } %>

