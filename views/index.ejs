  <h2 class="slider-title">Inclusive Learning Features</h2>

  <div class="slider-container">

    <div class="slide fade">
      <video src="/assets/Flood_Video.mp4" autoplay muted loop></video>
      <div class="caption">Flood</div>
    </div>

    <div class="slide fade">
      <img src="/assets/EQ_SL.webp" alt="Animated Safety Clip">
      <div class="caption">Earthquake</div>
    </div>

    <div class="slide fade">
    <video src="/assets/Forest_Fire_Video.mp4" autoplay muted loop></video>
    <div class="caption">Forest Fire</div>
    </div>

    <div class="slide fade">
      <img src="/assets/nepal_EQ.jpg" alt="Accessible Learning">
      <div class="caption">Nepal Earthquake</div>
    </div>

  </div>

