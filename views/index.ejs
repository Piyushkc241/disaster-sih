<!-- DISASTER MODULES (MAIN SECTION) -->
<section id="topics" class="section">
  <div class="container">
    <div class="section-header">
      <h2>Explore Disaster Learning Modules</h2>
      <p>
        Each module includes text, images, animations, sign-language videos, and audio explanations.
      </p>
    </div>

    <div class="grid grid-3">

      <!-- EARTHQUAKE -->
      <article class="topic-card">
        <img src="/assets/earthquake.jpg" class="topic-img" alt="Earthquake">
        <div class="topic-content">
          <h3>Earthquake Safety</h3>
          <p>Learn causes, intensity scales, building safety & the Drop-Cover-Hold technique.</p>
          <a href="/earthquake" class="btn-explore">Explore Learning</a>
        </div>
      </article>

      <!-- FLOOD -->
      <article class="topic-card">
        <img src="/assets/flood.jpg" class="topic-img" alt="Flood">
        <div class="topic-content">
          <h3>Flood Preparedness</h3>
          <p>Understand warnings, flood levels, evacuation steps & rescue measures.</p>
          <a href="/flood" class="btn-explore">Explore Learning</a>
        </div>
      </article>

      <!-- FIRE -->
      <article class="topic-card">
        <img src="/assets/fire.jpg" class="topic-img" alt="Fire">
        <div class="topic-content">
          <h3>Fire & Industrial Hazards</h3>
          <p>Fire classes, extinguisher usage, electrical fire handling & lab safety.</p>
          <a href="/fire" class="btn-explore">Explore Learning</a>
        </div>
      </article>

    </div>
  </div>
</section>

<div class="view-all-container">
  <a href="/alldisaster" class="view-all-btn">View All Disasters →</a>
</div>

<!-- ACCESSIBLE FEATURE SLIDER -->
