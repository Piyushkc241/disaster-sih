          </table>
        </section>
  

      </div>
    </div>

    <!-- Scripts -->
    <script>
      document.getElementById("logoutBtn").addEventListener("click", () => {
        window.location.href = "/";
      });

    </script>

    <!-- Extra styles -->
    <style>
      .alert-strip {
        width: 100%; background:#dcfce7;
        color:#065f46;padding:8px 12px;
        font-size:0.9rem;display:flex;
