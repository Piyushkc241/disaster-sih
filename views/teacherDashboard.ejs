        <!-- Dashboard Cards -->
        <section class="dashboard-content">
          <div class="dashboard-grid">

            <div class="dashboard-card" id="modules">
              <h2><i class="fa fa-chalkboard"></i> Teaching Modules</h2>
              <p>Access and schedule structured lessons for disaster safety topics.</p>
              <button class="cta-btn" onclick="window.location.href='/index'">Open Modules</button>
            </div>

