          <span>Disaster Learning Hub</span>
        </a>

        <nav class="sidebar-nav">
          <a href="/teacherdashboard" class="active"><i class="fa fa-gauge"></i> Dashboard</a>
          <a href="/alldisaster"><i class="fa fa-book-open"></i> Modules</a>
          <a href="/quiz"><i class="fa fa-question-circle"></i> Quizzes</a>
          <a href="/evacuation"><i class="fa fa-people-group"></i> Mock Drills</a>
          <a href="/report"><i class="fa fa-file-alt"></i> Reports</a>
        </nav>

        <button id="logoutBtn" class="sidebar-logout">
          <i class="fa fa-sign-out-alt"></i> Logout
        </button>
      </aside>

      <!-- Main Area -->
      <div class="main-area">

        <!-- Emergency Alert Strip -->
