<!DOCTYPE html>
<html>
<head>
  <title>Manage Students</title>
  <link rel="stylesheet" href="/css/style2.css" />

  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background: #f4f7f8;
    }

    h1 {
      text-align: center;
      margin-top: 20px;
      color: #2b7a0b;
    }

    .table-container {
      width: 95%;
      margin: auto;
      margin-top: 20px;
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 16px;
    }

    th, td {
      border: 1px solid #eee;
      padding: 12px;
      text-align: center;
    }

    th {
      background-color: #4fcd3c;
      color: #fff;
    }

    .status-pending { color: #cc8a00; font-weight: bold; }
    .status-approved { color: #2b7a0b; font-weight: bold; }
    .status-rejected { color: #b30000; font-weight: bold; }
    .status-blocked { color: #555; font-weight: bold; }

    button {
      padding: 6px 12px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      color: white;
    }

    .approve-btn { background-color: green; }
    .reject-btn  { background-color: red; margin-left: 5px; }
    .block-btn   { background-color: gray; margin-left: 5px; }
  </style>
</head>

<body>

  <h1>Manage Students</h1>

  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Unique ID</th>
          <th>Email</th>
          <th>College</th>
          <th>Phone</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>

        <% students.forEach(student => { %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.uniqueId %></td>
            <td><%= student.email %></td>
            <td><%= student.institute %></td>
            <td><%= student.phone %></td>

            <td>
              <% if (student.approval === "pending") { %>
                <span class="status-pending">Pending</span>
              <% } else if (student.approval === "approved") { %>
                <span class="status-approved">Approved</span>
              <% } else if (student.approval === "rejected") { %>
                <span class="status-rejected">Rejected</span>
              <% } else if (student.approval === "blocked") { %>
                <span class="status-blocked">Blocked</span>
              <% } %>
            </td>

            <td>
              <form action="/teacher/student/approve/<%= student._id %>" method="POST" style="display:inline;">
                <button class="approve-btn">Approve</button>
              </form>

              <form action="/teacher/student/reject/<%= student._id %>" method="POST" style="display:inline;">
                <button class="reject-btn">Reject</button>
              </form>

              <form action="/teacher/student/block/<%= student._id %>" method="POST" style="display:inline;">
                <button class="block-btn">Block</button>
              </form>
            </td>
          </tr>
        <% }) %>

      </tbody>
    </table>
  </div>

</body>
</html>
