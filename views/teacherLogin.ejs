<body class="auth-page">

    <!-- MAIN LOGIN CARD -->
    <div class="auth-main">
      <div class="auth-tag">
        <i class="fa-solid fa-shield-halved"></i>
        Secure Teacher Access
      </div>

      <h1 class="auth-title">Teacher Portal Login</h1>
      <p class="auth-subtitle">
        Sign in to manage course content, assignments, and disaster preparedness
        training modules for your students.
      </p>

      <form id="teacherLoginForm" class="auth-form" method="post" action="/teacherlogin">
        <div class="form-group">
          <label for="teacherEmail">Institute Email</label>
          <input
            type="email"
            id="teacherEmail"
            placeholder="teacher@institute.edu"
            name="email"
            required
          />
        </div>

        <div class="form-group">
          <label for="teacherPassword">Password</label>
          <input
            type="password"
            id="teacherPassword"
            placeholder="Enter your password"
            name="password"
            required
          />
        </div>

        <div class="auth-actions">
          <label class="auth-remember">
            <input type="checkbox" id="teacherRemember" />
            Remember me
          </label>

          <a href="#" class="auth-link">Forgot password?</a>
        </div>

        <button type="submit" class="btn btn-primary auth-submit-btn">
          <i class="fa-solid fa-right-to-bracket"></i>
          Log in as Teacher
        </button>

        <p class="auth-status" id="teacherLoginStatus"></p>

        <p class="auth-extra">
          Not a teacher? <a href="/studentlogin" class="auth-link">Log in as student</a>
        </p>
        <p class="auth-extra">
          <!-- updated index.html → home.html -->
          <a href="/" class="auth-link">← Back to main portal</a>
        </p>
      </form>
    </div>

    <!-- RIGHT PANEL (currently not used)
    <aside class="auth-side"> ... </aside>
    -->
  </div>

