<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Teacher Login • Disaster Learning Hub</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/style2.css" />
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
  <style>
    .toast-error {
      position: fixed;
      top: 16px;
      right: 16px;
      background: #ef4444;
      color: #fff;
      padding: 12px 16px;
      border-radius: 10px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.18);
      font-size: 0.95rem;
      opacity: 0;
      transform: translateY(-10px);
      transition: opacity 0.25s ease, transform 0.25s ease;
      z-index: 9999;
    }
    .toast-error.show {
      opacity: 1;
      transform: translateY(0);
    }
  </style>
</head>
<body class="auth-page">

  <div id="toast" class="toast-error" aria-live="assertive" role="alert" style="display:none;">
    <span id="toast-msg"></span>
  </div>

  <!-- MAIN LOGIN CARD -->
  <div class="auth-main">
    <div class="auth-tag">
      <i class="fa-solid fa-shield-halved"></i>
      Secure Teacher Access
    </div>

    <h1 class="auth-title">Teacher Portal Login</h1>
    <p class="auth-subtitle">
      Sign in to manage course content, assignments, and disaster preparedness
      training modules for your students.
    </p>

    <form id="teacherLoginForm" class="auth-form" action="/teacherlogin" method="POST">

      <div class="form-group">
        <label for="teacherEmail">Institute Email</label>
        <input type="email" id="teacherEmail" name="email" placeholder="teacher@institute.edu" required />
      </div>

      <div class="form-group">
        <label for="teacherPassword">Password</label>
        <input type="password" id="teacherPassword" name="password" placeholder="Enter your password" required />
      </div>

      <div class="auth-actions">
        <label class="auth-remember">
          <input type="checkbox" id="teacherRemember" />
          Remember me
        </label>

        <a href="#" class="auth-link">Forgot password?</a>
      </div>

      <!-- LOGIN + SIGNUP SIDE-BY-SIDE -->
      <div style="display:flex; gap:0.7rem; margin-top:1rem;">
        <button type="submit" class="btn btn-primary" style="flex:1;">
          <i class="fa-solid fa-right-to-bracket"></i> Login
        </button>


        <!-- SIGNUP REDIRECT BUTTON -->
         
        <button type="button" class="btn btn-outline" style="flex:1;" onclick="window.location.href='/teacherregister'">
          <i class="fa-solid fa-user-plus"></i> Sign Up
        </button>
      </div>

      <p class="auth-status" id="teacherLoginStatus"><%= msg || "" %></p>

      <p class="auth-extra">
        Not a teacher? <a href="/studentlogin" class="auth-link">Log in as student</a>
      </p>
      <p class="auth-extra">
        <a href="/" class="auth-link">← Back to main portal</a>
      </p>

    </form>
  </div>

</body>
</html>

<script>
  (function() {
    const msg = <%- JSON.stringify(msg || "") %>;
    const toast = document.getElementById('toast');
    const toastMsg = document.getElementById('toast-msg');
    if (msg) {
      toastMsg.textContent = msg;
      toast.style.display = 'block';
      requestAnimationFrame(() => toast.classList.add('show'));
      setTimeout(() => toast.classList.remove('show'), 4000);
      setTimeout(() => toast.style.display = 'none', 4500);
    }
  })();
</script>
</html>
