    <title>Punjab Fire Disaster History</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #ffffff;
            color: #333;
            display: flex;
        }

        /* Sidebar */
        .sidebar {
            width: 200px;
            background-color: #f0f0f0;
            padding: 20px;
            border-right: 2px solid #0f9d58;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            box-sizing: border-box;
        }
        .sidebar h3 {
            color: #0f9d58;
            margin-bottom: 10px;
        }
        .sidebar a {
            text-decoration: none;
            color: #333;
            display: block;
            margin: 10px 0;
            padding: 5px;
            border-left: 4px solid transparent;
        }
        .sidebar a:hover {
            border-left: 4px solid #0f9d58;
            background-color: #d7f3e5;
        }

        /* Main content */
        .main-content {
            margin-left: 0px;
            padding: 20px 40px;
            flex: 1;
        }

        header {
            background-color: #0f9d58;
            color: white;
            text-align: center;
            padding: 20px 10px;
            font-size: 28px;
            font-weight: bold;
            letter-spacing: 1px;
            position: relative;
        }
        h2 {
            color: #0f9d58;
            border-left: 5px solid #0f9d58;
            padding-left: 10px;
        }
        .year-block {
            background: #c9f2df;
            padding: 15px;
            border-left: 4px solid #0f9d58;
            margin-bottom: 15px;
            border-radius: 6px;
        }

        /* India Flags */
         header::after {
            content: '';
            position: absolute;
            top: 10px;
            width: 60px;
            height: 40px;
            background-image: url('https://upload.wikimedia.org/wikipedia/en/4/41/Flag_of_India.svg');
